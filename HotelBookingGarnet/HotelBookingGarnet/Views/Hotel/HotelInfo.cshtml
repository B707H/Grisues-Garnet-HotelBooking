@using Microsoft.AspNetCore.Identity
@model IndexViewModel

<div class="card">
    <h1 class="card-header"> @Model.Hotel.HotelName</h1>
    <div class="card-body">
        <div>
            <h5 class="card-title">Country: </h5>
            <p class="card-text">@Model.Hotel.Country</p>
        </div>
        <div>
            <h5 class="card-title">Region: </h5>
            <p class="card-text">@Model.Hotel.Region</p>
        </div>
        <div>
            <h5 class="card-title">City: </h5>
            <p class="card-text">@Model.Hotel.City</p>
        </div>
        <div>
            <h5 class="card-title">Address: </h5>
            <p class="card-text">@Model.Hotel.Address</p>
        </div>
        <div>
            <h5 class="card-title">Description: </h5>
            <p class="card-text">@Model.Hotel.Description</p>
        </div>
        <div>
            <h5 class="card-title">Star Rating: </h5>
            <p class="card-text">@Model.Hotel.StarRating</p>
        </div>
        <div>
            <h5 class="card-title">Property type:</h5>
            <p class="card-text"> @ViewData["propertyType"]</p>
        </div>
        <div>
            <h5 class="card-title">Price:</h5>
            <p class="card-text">
                @if (Model.Hotel.Price == 0)
                {
                    <i>Unknown</i>
                }
                else
                {
                    @Model.Hotel.Price <span>Ft</span>
                }
            </p>
        </div>
        <div class="imageBlock">
            @foreach (var blob in @Model.FolderList)
            {
            <img src="@blob.Path" class="thumb"/>
            }
        </div>
        @if (Model.User != null &&  (Model.User.Id.Equals(Model.Hotel.UserId) || User.IsInRole("Admin")))
        {
            <form asp-controller="Hotel" asp-action="EditHotel" asp-route-HotelId="@Model.Hotel.HotelId" method="get">
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
            
            <form asp-controller="Hotel" asp-action="AddRoom" asp-route-HotelId="@Model.Hotel.HotelId" method="get">
                <button type="submit" class="btn btn-success">Add room</button>
            </form>
        }
        
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
        
        @if (Model.Hotel.Rooms.Count != 0)
        {
            <table class="table">
                <tr>
                    <th>Room name</th>
                    <th>Price</th>
                    <th>Number of guests</th>
                    <th>Number of rooms</th>
                    <th>Beds</th>
                </tr>
                @foreach (var room in Model.Hotel.Rooms)
                {
                    <tr>
                        <td>@room.RoomName</td>
                        <td>@room.Price</td>
                        <td>@room.NumberOfGuests</td>
                        <td>@room.NumberOfRooms</td>
                        <td>
                            @foreach (var bed in Model.RoomBeds)
                            {
                                @if (room.RoomId == bed.RoomId)
                                {
                                    <div>
                                        <span>@bed.Bed.NumberOfBeds</span>
                                        @if (@bed.Bed.NumberOfBeds > 1)
                                        {
                                            <span>@(bed.Bed.BedType+"s")</span>
                                        }
                                        else
                                        {
                                            <span>@bed.Bed.BedType</span>
                                        }
                                    </div>
                                }
                            }
                            @if (Model.User != null && (Model.User.Id.Equals(Model.Hotel.UserId) || User.IsInRole("Admin")))
                            {
                                <a asp-controller="Hotel" asp-action="AddBed" asp-route-hotelId="@Model.Hotel.HotelId" asp-route-roomId="@room.RoomId">+ add bed</a>
                            }
                        </td>
                        <td>
                            @if (User.IsInRole("Guest"))
                            {
                                <form asp-controller="Reservation" asp-action="AddReservation" asp-route-roomId="@room.RoomId" method="get">
                                    <button type="submit" class="btn btn-warning">Reserve Room</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>