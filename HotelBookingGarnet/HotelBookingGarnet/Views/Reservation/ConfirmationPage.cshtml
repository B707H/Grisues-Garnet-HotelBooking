@model Reservation

<div class="card">
    <h1 class="card-header">@localizer["Reservation"] #@Model.ReservationId</h1>
    <div class="card-body">
        <div>
            <h5 class="card-title">@localizer["Start date:"] </h5>
            <p class="card-text">@Model.ReservationStart.ToString("yyyy/MM/dd")</p>
        </div>
        <div>
            <h5 class="card-title">@localizer["End date:"] </h5>
            <p class="card-text">@Model.ReservationEnd.ToString("yyyy/MM/dd")</p>
        </div>
        <div>
            <h5 class="card-title">@localizer["Total price (HUF):"] </h5>
            <p class="card-text">@Model.TotalPrice</p>
        </div>
    </div>
    <form asp-controller="Reservation" asp-action="MyReservation" method="get">
        <button type="submit" class="btn btn-success">@localizer["Confirm Reservation"]</button>
    </form>

    <form asp-controller="Reservation" asp-action="CancelReservation" asp-route-ReservationId="@Model.ReservationId" method="post">
        <button type="submit" class="btn btn-danger">@localizer["Cancel"]</button>
    </form>
</div>