@model HotelBookingGarnet.ViewModels.LoginViewModel

@{
    ViewData["Title"] = @localizer["Find your email"];
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">
        <h6>@localizer["Enter your email"]</h6>
        <section>
            @if (Model.ErrorMessages != null)
            {
                @foreach (var error in Model.ErrorMessages)
                {
                    <span class="text-danger">@localizer[@error]</span>
                }
            }
            <form asp-controller="AppUser" asp-action="SendRecoveryEmail" method="post">
                <span asp-validation-for="Email" class="text-danger"></span>
                <hr/>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-outline-info">@localizer["Request new password"]</button>
            </form>
        </section>
    </div>
</div>